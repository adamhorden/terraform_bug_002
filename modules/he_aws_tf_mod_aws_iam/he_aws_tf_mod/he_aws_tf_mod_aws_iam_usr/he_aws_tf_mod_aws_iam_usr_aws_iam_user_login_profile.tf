# aws_iam_user_login_profile.this

resource aws_iam_user_login_profile this {

  # --------------------------------------------------------------------------------------
  # For:
  # --------------------------------------------------------------------------------------

  for_each = length(
    local.he_aws_tf_mod_aws_iam_usr_aws_iam_usr_li_prof
  ) > 0 ? local.he_aws_tf_mod_aws_iam_usr_aws_iam_usr_li_prof : {}

  # --------------------------------------------------------------------------------------
  # Depends:
  # --------------------------------------------------------------------------------------

  depends_on = [
    aws_iam_user.this,
  ]

  # --------------------------------------------------------------------------------------
  # Provider:
  # --------------------------------------------------------------------------------------

  provider = aws.he_aws_tf_app

  # --------------------------------------------------------------------------------------
  # Argument:
  # --------------------------------------------------------------------------------------

  user = format(
    "%s",
    lookup(
      aws_iam_user.this[
        each.key
      ],
      "name",
      "",
    ),
  )

  # --------------------------------------------------------------------------------------
  # Arguments:
  # --------------------------------------------------------------------------------------

  password_length = local.he_aws_tf_mod_aws_iam_usr_aws_iam_usr_li_prof_password_length
  pgp_key         = local.he_aws_tf_mod_aws_iam_usr_aws_iam_usr_li_prof_pgp_key

}
