# aws_cloudwatch_log_group.this_he_aws_tf_mod_aws_kms

resource aws_cloudwatch_log_stream this {

  # --------------------------------------------------------------------------------------
  # For:
  # --------------------------------------------------------------------------------------

  for_each = length(
    local.he_aws_tf_mod_aws_cb_aws_cw_log_strm
  ) > 0 ? local.he_aws_tf_mod_aws_cb_aws_cw_log_strm : {}

  # --------------------------------------------------------------------------------------
  # Provider:
  # --------------------------------------------------------------------------------------

  provider = aws.he_aws_tf_app

  # --------------------------------------------------------------------------------------
  # Argument:
  # --------------------------------------------------------------------------------------

  log_group_name = format(
    "%s",
    lookup(
      aws_cloudwatch_log_group.this_he_aws_tf_mod_aws_kms[
        each.key
      ],
      "name",
      "",
    ),
  )

  # --------------------------------------------------------------------------------------
  # Arguments:
  # --------------------------------------------------------------------------------------

  name = local.he_aws_tf_mod_aws_cb_aws_cw_log_strm_name

}
